<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".auth.RegisterShareActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="참여할 가족 그룹이 있나요?"
            android:layout_marginTop="150dp"
            android:textSize="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가족 초대 코드를 입력하면 한 마리의 반려견을\n 여러 명의 유저가 함께 돌볼 수 있어요."
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="100dp"
            android:layout_marginHorizontal="32dp"
            android:textSize="18dp"
            android:textAlignment="center"/>
        <!--글자 단어로 줄바꿈 하는 코드?-->

        <EditText
            android:id="@+id/family_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="15dp"
            android:padding="15dp"
            android:background="@drawable/rectangle_base"
            android:hint="사용자에게 받은 공유 코드를 입력하세요."
            android:textSize="18dp"
            android:inputType="text"
            android:elevation="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="공유할 유저가 없으면 입력하지 않아도 됩니다."
            android:gravity="center" />

        <!--View에서 weight=1을 적용하여 빈 공간 차지-->
        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/share_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:paddingHorizontal="70dp"
            android:paddingVertical="10dp"
            android:text="다음으로"
            android:textSize="24dp"
            android:backgroundTint="@color/main_color"/>

</LinearLayout>