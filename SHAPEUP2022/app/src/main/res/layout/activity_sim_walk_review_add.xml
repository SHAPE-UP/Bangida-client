<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SimWalkReviewAddActivity">


    <Button
        android:id="@+id/walkreviewsave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/main_color"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="10dp"
        android:text="저장"
        android:textSize="24dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="40dp"
        android:text="산책 REVIEW 등록하기"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>

    </ScrollView>

    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/walkreview_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="15dp"
        android:padding="16dp"
        android:background="@drawable/rectangle_base"
        android:hint="산책이름"
        android:inputType="text"
        android:textSize="20dp"
        android:elevation="4dp" />

    <EditText
        android:id="@+id/walkreview_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="15dp"
        android:padding="10dp"
        android:background="@drawable/rectangle_base"
        android:inputType="text"
        android:hint="거리"
        android:textSize="15dp"
        android:elevation="4dp" />

    <EditText
        android:id="@+id/walkreview_fast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="15dp"
        android:padding="10dp"
        android:background="@drawable/rectangle_base"
        android:inputType="text"
        android:hint="속력"
        android:textSize="15dp"
        android:elevation="4dp" />
    <EditText
        android:id="@+id/walkreview_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="15dp"
        android:padding="10dp"
        android:inputType="text"
        android:background="@drawable/rectangle_base"
        android:hint="시간"
        android:textSize="15dp"
        android:elevation="4dp" />
    <EditText
        android:id="@+id/walkreview_timestamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="15dp"
        android:padding="10dp"
        android:inputType="text"
        android:background="@drawable/rectangle_base"
        android:hint="타임스탬프"
        android:textSize="15dp"
        android:elevation="4dp" />

    <ImageView
        android:id="@+id/walkreview_roadimage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="130dp"
        android:src="@drawable/user_basic"/>


    <MultiAutoCompleteTextView
        android:id="@+id/walkreview_memo"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/rectangle_base"
        android:hint="메모를 작성하세요"
        android:textSize="20dp" />

</LinearLayout>