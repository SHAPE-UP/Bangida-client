<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".simulation.SimBrushToothActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:id="@+id/progress_tooth"
        style="@android:style/Widget.Material.ProgressBar.Horizontal"
        />

    <RelativeLayout
        android:id="@+id/area_move"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_gravity="center" >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/maltese_teeth" />

        <View
            android:id="@+id/area_doggy_teeth"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="130dp"
            android:layout_marginTop="250dp"
            android:background="@color/transparent" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/toothpaste_move"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/toothpaste" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/toothgauze_move"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/toothgauze" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/toothbrush_move"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/toothbrush" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        >
        <Button
            android:id="@+id/toothcancle_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="집어넣기"
            android:backgroundTint="@color/black"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <ImageButton
            android:id="@+id/toothpaste_btn"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:backgroundTint="@color/transparent"
            android:src="@drawable/toothpaste" />

        <ImageButton
            android:id="@+id/toothgauze_btn"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:backgroundTint="@color/transparent"
            android:src="@drawable/toothgauze" />

        <ImageButton
            android:id="@+id/toothbrush_btn"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:backgroundTint="@color/transparent"
            android:src="@drawable/toothbrush" />

    </LinearLayout>

</LinearLayout>