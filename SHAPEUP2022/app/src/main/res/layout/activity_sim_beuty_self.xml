<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".simulation.SimBeutySelfActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="위생미용" />

        <ImageView
            android:layout_width="332dp"
            android:layout_height="429dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="120dp"
            android:src="@drawable/exmal" />

        <Button
            android:id="@+id/btnC"
            android:layout_width="105dp"
            android:layout_height="66dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="119dp"
            android:layout_marginEnd="187dp"
            android:layout_marginBottom="250dp"
            android:background="#00ff0000"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnA"
            android:layout_width="wrap_content"
            android:layout_height="74dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="326dp"
            android:layout_marginEnd="183dp"
            android:background="#00ff0000"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="378dp"
            android:layout_marginEnd="55dp"
            android:background="#00ff0000"
            android:textColor="@color/black" />

        <ImageButton
            android:id="@+id/simEx"
            android:layout_width="70dp"
            android:layout_height="263dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="6dp"
            android:src="@drawable/dog_beauty_machine" />

        <com.google.android.youtube.player.YouTubePlayerView
            android:id="@+id/youtubeView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="-1dp"
            android:layout_marginBottom="49dp"
            android:visibility="invisible" />

    </RelativeLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tuto_sim_beauty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tutorial">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="튜토리얼 내용을 입력하세요."
            android:textColor="@color/base_color1"
            android:textSize="20sp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>